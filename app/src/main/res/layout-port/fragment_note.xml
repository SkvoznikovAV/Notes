<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/note_date_size"
        android:text="@string/dttm_note" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/header_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/note"
        android:textStyle="bold"
        android:textSize="@dimen/note_title_size"
        android:text="@string/note" />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/description_note"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:textSize="@dimen/note_desc_size"
        android:hint="@string/description_note"
        android:text="@string/description_note" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_note_ok"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/btn_note_ok"
        />
</LinearLayout>


